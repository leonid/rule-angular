.sidebar-toggle-hand
  position: absolute;
  top: 0;
  left: 100%;
  height: 100%;
  width: 100px;
  overflow: hidden;
  margin-left: -100px;
  background: #F00;

.sidebar-is-closed
  position absolute
  left: 0

  & :after
    position absolute
    content ''
    height 100%
    width 100px
    top 0
    background red
