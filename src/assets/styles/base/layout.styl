.wrapper, .row {
  height: 100%;
  margin-left: 0;
  margin-right: 0;
}

.wrapper:before, .wrapper:after,
.column:before, .column:after {
  content: "";
  display: table;
}

.wrapper:after,
.column:after {
  clear: both;
}

.column {
  height: 100%;
  overflow: auto;
}

.full {
  padding-top: 70px;
}

.box {
  bottom: 0; /* increase for footer use */
  left: 0;
  position: absolute;
  right: 0;
  top: 0;
  background-color: #444;
}

.divider {
  margin-top: 32px;
}

#footer {
  margin-bottom: 20px;
}

#main {
  background-color: #E9EAED;
  padding-left: 0;
  padding-right: 0;
}

#main .img-circle {
  margin-top: 18px;
  height: 70px;
  width: 70px;
}

.logo {
  display: block;
  padding: 3px;
  background-color: #FFF;
  color: #3B5999;
  height: 28px;
  width: 28px;
  margin: 9px;
  margin-right: 2px;
  margin-left: 15px;
  font-size: 20px;
  font-weight: 700;
  text-align: center;
  text-decoration: none;
  text-shadow: 0 0 1px;
  border-radius: 2px;
}
